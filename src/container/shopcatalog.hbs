<main>
    <div>
        <ol class="breadcrumb my-5">
            {{#each breadcrumb}}
            {{#if @last}}
            <li class="breadcrumb-item active">
                {{name}}
            </li>
            {{else}}
            <li class="breadcrumb-item">
                <a href="{{url}}">{{name}}</a>
            </li>
            {{/if}}
            {{/each}}
        </ol>
    </div>

    <div class="row">
        {{#each sortBlock}}
        <div class="col-3">
            <h1>{{header}}</h1>
            <select class="form-select">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                <option value={{value}}>{{text}}</option>
                {{/each}}
            </select>
        </div>
        {{/each}}
    </div>

    <div class="row mt-5 ps-1 g-2 mb-5">
        {{#with filterBlock}}
        <div class="card col-4">
            <div class="row">
                <div class="col-12">
                    <div class="mt-2">
                        {{#with sellers}}
                        <p>{{title}}</p>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">
                                {{list.[0].value}}
                            </label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">
                                {{list.[1].value}}
                            </label>
                        </div>
                        {{/with}}
                        <hr>
                    </div>

                    <div>
                        {{#with brands}}
                        <p>{{title}}</p>
                        {{#with input}}
                        <input class="form-control mb-3" type="text" placeholder="{{placeholder}}">
                        {{/with}}

                        {{#each options}}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">
                                {{value}}
                            </label>
                        </div>
                        {{/each}}
                        {{/with}}
                        <hr>
                    </div>

                    <div>
                        {{#with price}}
                        <p>{{title}}</p>
                        <div class="row">
                            {{#with range}}
                            <div class="col-4">
                                <input class="form-control" type="text" placeholder="{{from}}">
                            </div>

                            <div class="col-4">
                                <input class="form-control" type="text" placeholder="{{to}}">
                            </div>
                            {{/with}}

                            {{#with button}}
                            <div class="col-4">
                                <a class="btn btn-light" href="{{link}}">{{text}}</a>
                            </div>
                            {{/with}}

                        </div>
                        {{/with}}
                        <hr>
                    </div>


                    <div>
                        {{#with filterList.[0]}}
                        <p>{{title}}</p>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">
                                {{options.[0].value}}
                            </label>
                        </div>
                        {{/with}}
                        <hr>
                    </div>

                    <div>
                        {{#with filterList.[1]}}
                        <p>{{title}}</p>
                        {{#each options}}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">
                                {{value}}
                            </label>
                        </div>
                        {{/each}}
                        {{/with}}
                        <hr>
                    </div>

                    <div>
                        {{#with filterList.[2]}}
                        <p>{{title}}</p>
                        {{#each options}}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">
                                {{value}}
                            </label>
                        </div>
                        {{/each}}
                        {{/with}}
                        <hr>
                    </div>

                    <div>
                        {{#with filterList.[3]}}
                        <p>{{title}}</p>
                        {{#each options}}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">
                                {{value}}
                            </label>
                        </div>
                        {{/each}}
                        {{/with}}
                        <hr>
                    </div>

                    <div class="mb-2">
                        {{#with filterList.[4]}}
                        <p>{{title}}</p>
                        {{#each options}}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">
                                {{value}}
                            </label>
                        </div>
                        {{/each}}
                        {{/with}}
                    </div>

                </div>
            </div>
        </div>
        {{/with}}

        <div class="col-4">
            {{> catalogItem}}
            {{> catalogItem}}
        </div>

        <div class="col-4">
            {{> catalogItem}}
            {{> catalogItem}}
        </div>
    </div>
    {{> shopaction}}
</main>