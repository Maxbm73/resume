<main>
    <h1 class="h1 pt-5 pb-4">{{header}}</h1>

    <div class="row g-2">
        {{#with contacts_data}}
        <div class="col-8">
            <h4 class="h4 pb-2">{{title}}</h4>
            {{#with buttons.[0]}}
            <button class="btn btn-warning">{{text}}</button>
            {{/with}}
            {{#with buttons.[1]}}
            <button class="btn btn-outline-warning">{{text}}</button>
            {{/with}}

            <div class="row g-2 mt-2">
                <div class="col-6">
                    <div class="form-check ps-1">
                        {{#with form.input.surname}}
                        <label class="form-label">{{label}}</label>
                        <input name="food" class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-check ps-1">
                        {{#with form.input.name}}
                        <label class="form-label">{{label}}</label>
                        <input name="food" class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-check ps-1">
                        {{#with form.input.phone}}
                        <label class="form-label">{{label}}</label>
                        <input name="food" class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-check ps-1">
                        {{#with form.input.email}}
                        <label class="form-label">{{label}}</label>
                        <input name="food" class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                </div>
            </div>
            <hr class="mt-4">

            {{#with form.switch.[0]}}
            <div class="form-check form-switch pb-2">
                <label class="form-check-label">{{text}}</label>
                <input class="form-check-input" type="checkbox">
            </div>
            {{/with}}

            {{#with form.switch.[1]}}
            <div class="form-check form-switch">
                <label class="form-check-label">{{text}}</label>
                <input class="form-check-input" type="checkbox">
            </div>
            {{/with}}
            <hr class="mt-4 mb-5">
            {{/with}}

            {{#with delivery}}
            <h4 class="h4">{{title}}</h4>
            <div class="card px-2">
                <div class="row g-2 pb-2">

                    <div class="col-6">
                        {{#with select.[0]}}
                        <label class="form-label">{{label}}</label>
                        <select class="form-select">
                            <option class="selected">{{placeholder}}</option>
                            {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                        {{/with}}
                    </div>

                    <div class="col-6">
                        {{#with select.[1]}}
                        <label class="form-label">{{label}}</label>
                        <select class="form-select">
                            <option class="selected">{{placeholder}}</option>
                            {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                        {{/with}}
                    </div>

                </div>
            </div>
            {{/with}}

            <div class="row my-3">

                <div class="col-6">
                    {{#with delivery}}
                    {{#each delivery_type}}
                    <div class="form-check">
                        <label class="form-check-label">{{type}}</label>
                        <input type="radio" name="delivery" class="form-check-input">
                    </div>
                    {{/each}}
                    {{/with}}
                </div>

                <div class="col-6 text-end">
                    {{#with delivery}}
                    {{#each delivery_type}}
                    <p class="mb-0">{{value}}</p>
                    {{/each}}
                    {{/with}}
                </div>
            </div>
            <hr>

            <div class="mb-3">
                {{#with delivery}}
                <h4 class="h4">Оплата</h4>
                <div class="form-check">
                    <label class="form-check-label">{{payment.[0].type}}</label>
                    <input type="radio" class="form-check-input">
                </div>

                <div class="text-lowercase">{{payment.[0].description}}</div>

                <div class="form-check">
                    <label class="form-check-label">{{payment.[1].type}}</label>
                    <input type="radio" class="form-check-input">
                </div>
                {{/with}}

            </div>
            <hr class="mt-4 mb-3">

            {{#with contacts_data}}
            <div class="row g-2 mt-2">
                <div class="col-6">
                    <div class="form-check ps-1">
                        {{#with form.input.surname}}
                        <label class="form-label">{{label}}</label>
                        <input name="food" class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-check ps-1">
                        {{#with form.input.name}}
                        <label class="form-label">{{label}}</label>
                        <input name="food" class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-check ps-1">
                        {{#with form.input.phone}}
                        <label class="form-label">{{label}}</label>
                        <input name="food" class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-check ps-1">
                        {{#with form.input.email}}
                        <label class="form-label">{{label}}</label>
                        <input name="food" class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                </div>
            </div>
            {{/with}}

            <div class="form-check ps-1">
                {{#with delivery.coment}}
                <label class="form-check-label">{{label}}</label>
                <input class="form-control" type="text" placeholder="{{placeholder}}">
                {{/with}}
            </div>
            <hr class="mt-4">

            {{#with coupon}}
            <h4 class="h4 pt-2">{{title}}</h4>
            {{/with}}
            {{#with coupon.select}}
            <div class="ps-1">
                {{#with availabel_coupon}}
                <label class="form-label">{{label}}</label>
                <select class="form-select form-select-lg">
                    <option class="selected">{{placeholder}}</option>
                    {{#each options}}
                    <option value="value">{{text}}</option>
                    {{/each}}
                </select>
                {{/with}}
            </div>


            <div class="ps-1 my-3">
                {{#with friend_coupon}}
                <label class="form-label">{{label}}</label>
                <select class="form-select form-select-sm">
                    <option class="selected">{{placeholder}}</option>
                    {{#each options}}
                    <option value="value">{{text}}</option>
                    {{/each}}
                </select>
                {{/with}}
            </div>
            {{/with}}

            <div>
                {{#with coupon.add.friend}}
                <label class="form-label">{{label}}</label>
                <input class="form-control form-control-lg" type="text" placeholder="{{placeholder}}">
                <div class="text-lowercase">{{caption}}</div>
                {{/with}}
            </div>

            <div class="my-3">
                {{#with coupon.add.colleague}}
                <label class="form-label">{{label}}</label>
                <input class="form-control form-control-sm" type="text" placeholder="{{placeholder}}">
                <div class="text-lowercase">{{caption}}</div>
                {{/with}}
            </div>
            <hr class="my-4">

            <div class="mt-5">
                {{#with quiz}}
                <h4 class="h4">{{title}}</h4>
                <p>{{preference.title}}</p>

                {{#each preference.options}}
                <div class="form-check">
                    <label class="form-check-label">{{this}}</label>
                    <input type="radio" class="form-check-input">
                </div>
                {{/each}}

                <div class="mt-3">
                    {{#with your_expirience}}
                    <label class="form-label">{{label}}</label>
                    <input type="text" class="form-control">
                    {{/with}}
                </div>

                <div class="my-3">
                    {{#with purchase_frequency}}
                    <label class="form-label">{{label}}</label>
                    <select type="text" class="form-select">
                        <option class="slected">{{placeholder}}</option>
                        {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                        {{/each}}
                    </select>
                    {{/with}}
                </div>

                <div class="mb-5">
                    <p>{{factors.title}}</p>
                    {{#each factors.options}}
                    <div class="form-check">
                        <label class="form-check-label">{{this}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}
                </div>

                {{/with}}
            </div>


        </div>


        <div class="col-4">
            <div class="card">
                {{#with action_block.[0]}}
                <div>
                    <button class="btn btn-success mb-2 mt-2 ms-2">{{text}}</button>
                </div>
                {{/with}}
                {{#with action_block.[1]}}
                <div>
                    <button class="btn btn-danger mb-2 ms-2">{{text}}</button>
                </div>
                {{/with}}
                {{#with action_block.[2]}}
                <div>
                    <button class="btn btn-info mb-2 ms-2">{{text}}</button>
                </div>
                {{/with}}
            </div>

            <div class="card ps-2">
                {{#with total}}
                <h4 class="h4">{{title}}</h4>
                {{#each item_list}}
                <p class="mb-0">{{name}}: {{price}}</p>
                {{/each}}

                <hr class="my-1">

                {{#each additional_info}}
                <p class="mb-0">{{text}}: {{value}}</p>
                {{/each}}

                <hr class="my-1">
                <p class="mb-0">{{total_price.text}}: {{total_price.value}}</p>
                <hr class="my-1">

                {{#with button.[0]}}
                <div>
                    <button class="btn btn-primary mb-2 mt-1">{{text}}</button>
                </div>
                {{/with}}
                {{#with button.[1]}}
                <div>
                    <button class="btn btn-outline-primary mb-2">{{text}}</button>
                </div>
                {{/with}}
                {{/with}}
            </div>


        </div>
    </div>

</main>