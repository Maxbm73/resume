<div class="card mb-5">
    <div class="m-3">
        <div class="card">
            <div class="row">
                <div class="col-6 py-1">
                    {{#with title}}
                    <div class="ps-2">
                        <h5>{{userName}}</h5>
                    </div>
                    <div class="ps-2">{{caption}}</div>
                </div>
                <div class="col-6 text-end">
                    <div class="pt-3 pe-2">{{date}}</div>
                    {{/with}}
                </div>
            </div>
        </div>

        <div class="card">
            <div class="row">
                {{#with reviewBody}}
                <div class="col-12 ps-4 pt-2">
                    {{#with seller}}
                    <p>{{title}}: {{value}}</p>
                    {{/with}}
                    {{#with rating}}
                    <p>{{title}}: {{value}}</p>
                    {{/with}}
                    <p>{{text.[0]}}</p>
                    <p>{{text.[1]}}</p>
                    {{#with advantages}}
                    <p><b>{{title}}</b><br>{{text}}</p>
                    {{/with}}
                    {{#with disadvantages}}
                    <p><b>{{title}}</b><br>{{text}}</p>
                    {{/with}}
                    <div class="mb-2">
                        {{#each images}}
                        <img src="{{this}}" alt="photo" class="me-2">
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
    </div>


    <div class="me-3">
        <div class="mt-3 col-11 float-end">
            {{#with reviewBody}}
            {{#each coments}}
            {{#if @last}}
            <div class="py-2 px-2 mb-3 card">
                <div class="row">

                    <div class="col-6 mb-2">
                        <div>
                            <h5>{{userName}}</h5>
                        </div>

                    </div>

                    <div class="col-6">
                        <div class="text-end">{{date}}</div>
                    </div>
                </div>

                <div>
                    {{text}}
                </div>
            </div>

            {{else}}
            <div class="py-2 px-2 mb-4 card">
                <div class="row">

                    <div class="col-6 mb-2">
                        <div>
                            <h5>{{userName}}</h5>
                        </div>

                    </div>

                    <div class="col-6">
                        <div class="text-end">{{date}}</div>
                    </div>
                </div>

                <div>
                    {{text}}
                </div>
            </div>
            {{/if}}
            {{/each}}
            {{/with}}
        </div>
    </div>
</div>