<div class="card">
    <img src="{{image}}" class="card-img-top">
    <div class="card-body">
        <h5 class="card-title">{{title}}
            {{#if isHot}}
            <span class="badge rounded-pill bg-warning">HOT!</span>
            {{/if}}
            {{#if idNew}}
            <span class="badge rounded-pill bg-primary">Нове</span>
            {{/if}}
        </h5>
        <p>{{description}}</p>
    </div>
</div>